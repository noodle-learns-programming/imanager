<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=gbk" />
		<title>iManager Consume</title>
		<link rel="stylesheet" type="text/css" media="all" href="../resource/js/jscalendar/skins/aqua/theme.css" title="Aqua" />
		<script type="text/javascript" src="../resource/js/jscalendar/calendar.js"></script>
		<script type="text/javascript" src="../resource/js/jscalendar/showCalendar.js"></script>
		<script type="text/javascript" src="../resource/js/jscalendar/lang/cn_utf8.js"></script>
		<script type="text/javascript" src="../resource/js/util.js"></script>
		<script type="text/javascript" src="../resource/js/consume/consume.js"></script>
	</head>
	
	<body topmargin="10" bgcolor="#99CCFF">
		<center>
			#parse("/framework/header.vm")
			<br/><br/><br/>
				
			<table border="0" width="80%" cellpadding="0" cellspacing="0">
        		<tr valign="top">
        			<td align="left" width="150">
        				#parse("/consume/menu.vm")
        			</td>
        			<td>&nbsp;&nbsp;</td>
        			<td align="center">
                		<h2>消费列表</h2>
                		<form action="consumeItemAction!doGetConsumeItemList.action" method="post">
							开始日期:<input type="text" id="searchObj.startDate" name="searchObj.startDate" readonly="true" value="$!dateUtil.date($!searchObj.startDate, 'yyyy-MM-dd')" size="20"><input type="button" value="日历" onclick="return showCalendar('searchObj.startDate', '%Y-%m-%d');">
                			&nbsp;&nbsp;
							结束日期:<input type="text" id="searchObj.endDate" name="searchObj.endDate" readonly="true" value="$!dateUtil.date($!searchObj.endDate, 'yyyy-MM-dd')" size="20"><input type="button" value="日历" onclick="return showCalendar('searchObj.endDate', '%Y-%m-%d');">
							&nbsp;&nbsp;
							<input type="submit" name="submit" value="查询" />
                		</form>
                		
                		<table bgcolor="#E1E1E1" border="1" bordercolor="blue"width="100%" height="60"
                			cellpadding="0" cellspacing="0" align="center" >
                			<tr>
                				<th align="center">消费项目</th>
                				<th align="center">消费地点</th>
                				<th align="center">单价</th>
                				<th align="center">数量</th>
                				<th align="center">总价</th>
                				<th align="center">消费时间</th>
                				<th align="center">收支方向</th>
                				<th align="center">消费者</th>
                				<th align="center">操作</th>
                			</tr>
                			#foreach ($consumeItem in $consumeItemList)
                				<tr>
                					<td align = "center"> $esc.html($!consumeItem.itemName) &nbsp; </td>
                					<td align = "center"> $esc.html($!consumeItem.address) &nbsp; </td>
                					<td align = "center"> $!consumeItem.price &nbsp; </td>
                					<td align = "center"> $!consumeItem.quantity &nbsp; </td>
                					<td align = "center"> $!consumeItem.totalPrice &nbsp; </td>
                					<td align = "center"> $!dateUtil.date($!consumeItem.feeDate, 'yyyy-MM-dd') &nbsp; </td>
                					<td align = "center">
                						#if($!consumeItem.inOrOut == 'in') 
											收入 &nbsp;
                						#elseif($!consumeItem.inOrOut == 'out')
                							支出 &nbsp;
                						#else
                							$!consumeItem.inOrOut &nbsp;
                						#end
                					</td>
                					<td align = "center"> $!consumeItem.loginId &nbsp; </td>
                					<td align = "center">
                						<a href="consumeItemAction!doGetConsumItem.action?consumeItemId=$!consumeItem.consumeItemId">更新</a>&nbsp;|&nbsp;
                						<a href="#" onclick=deleteConsumeItem($!consumeItem.consumeItemId)>删除</a>
                					</td>
                				</tr>
                			#end
                			<tr>
                				<th align = "center">总价钱：</th>
                				<th align = "left" colspan="8">$!consumeItemListSum</th>
                			</tr>
                		</table>
					</td>
				</tr>
			</table>
		</center>
	
	</body>
</html>