<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
		<title>iManager MyTools</title>
		<link rel="stylesheet" type="text/css" media="all" href="../resource/css/globle.css"/>
		<script src="http://maps.google.com/maps?file=api&amp;v=2&amp;key=ABQIAAAAs2_oqBfHtsKduR_r6i2xYBQsBa3TtCkG90PqzjguKBhhwr2jMBQr53wK-cv5svtjvQJU9ybGrBJzHg"
          type="text/javascript">
		</script>
		<script type="text/javascript">
        //<![CDATA[
        	var map = null;
            var geocoder = null;
            function initialize() {
              if (GBrowserIsCompatible()) {
                map = new GMap2(document.getElementById("map_canvas"))
                map.setCenter(new GLatLng(39.917,116.397), 14);
        		map.addControl(new GLargeMapControl());
        		map.addControl(new GScaleControl());
        		map.addControl(new GMapTypeControl());
        		map.addControl(new GOverviewMapControl());
        		map.removeMapType(G_HYBRID_MAP);
        		geocoder = new GClientGeocoder();
              }
            }
        	
        	function showAddress(address) {
              if (geocoder) {
                geocoder.getLatLng(
                  address,
                  function(point) {
                    if (!point) {
                      //alert("Cannot find: " + address);
                    } else {
                      map.setCenter(point, 14);
                      var marker = new GMarker(point);
                      map.addOverlay(marker);
                      marker.openInfoWindowHtml(address);
                    }
                  }
                );
              }
            }
		//]]>
		</script>
	</head>
	<body onload="initialize()" onunload="GUnload()">
		#parse("/framework/header.vm")
		<div align="center">
			<table border="0" width="100%" cellpadding="0" cellspacing="0">
        		<tr valign="top">
        			<td align="left" width="150px">
        				#parse("/tools/menu.vm")
        			</td>
        			<td>&nbsp;&nbsp;</td>
        			<td align="center">
                    	<h2>Google Map</h2>
                    	<form action="#" onsubmit="showAddress(this.address.value); return false">
                			<p>
                				<input type="text" size="40" name="address" value="" />
                				<input type="submit" value="Search" />
                			</p>
                			<div id="map_canvas" style="width:620px;height:360px;border: #000000 solid;"></div>
                		</form>
					</td>
					<td>&nbsp;&nbsp;</td>
				</tr>
				<tr><td colspan="4"></td></tr>
			</table>
    	</div>
	</body> 
</html>